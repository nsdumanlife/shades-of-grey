{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "avoid",
        "printWidth": 120,
        "semi": false,
        "trailingComma": "es5",
        "tabWidth": 2
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "eqeqeq": "off",
    "class-methods-use-this": "off"
  }
}
