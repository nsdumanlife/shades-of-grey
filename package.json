{
  "name": "shadesof",
  "version": "1.0.0",
  "description": "An npm library that takes a number n as a parameter and return an array containing n shades of grey in hexadecimal code.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watchAll",
    "test-coverage": "jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1",
    "test:coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "lint": "lint-staged",
    "lint-all": "pretty-quick && eslint",
    "prepare": "husky install"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!data/keyMap.js",
      "!/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "pretty-quick --staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nsdumanlife/shades-of-grey.git"
  },
  "author": "Numan Selman Duman <numanselmanduman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nsdumanlife/shades-of-grey/issues"
  },
  "homepage": "https://github.com/nsdumanlife/shades-of-grey#readme",
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  }
}
